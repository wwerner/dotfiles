[credential]
	helper = /usr/local/share/gcm-core/git-credential-manager
[credential "https://dev.azure.com"]
	useHttpPath = true
[commit]
	gpgsign = false

[url "ssh://git@github.com/"]
	insteadOf = https://github.com/
[init]
	defaultBranch = main
